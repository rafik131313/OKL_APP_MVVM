<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity"
    android:background="@drawable/background_main_dark">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.9"
        android:background="@color/oklcolor_darker_inv"
        android:gravity="right"
        >


        <TextView
            android:id="@+id/score_info"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="6dp"
            android:contentDescription="@string/score"
            android:gravity="center|end"
            android:text="@string/score"
            android:textAllCaps="true"
            android:textSize="23sp"
            android:textColor="@color/white_darker"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@string/points"
            android:gravity="center|end"
            android:text="0"
            android:textSize="35dp"
            android:textColor="@color/white_darker"
            android:textStyle="bold|italic"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/turnOnTracking"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:textColor="@color/white_darker"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="@string/turnon"
            android:background="@drawable/button_switch_on"/>


        <TextView
            android:id="@+id/whatToDoTracking"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/white_darker"
            android:text="@string/instrukcja_visiting" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/llTwo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/bisons"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/zagroda_visiting"
                android:background="@drawable/picslayout3"/>

            <ImageView
                android:id="@+id/check_bisons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@drawable/picslayout4"
                android:paddingRight="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_check_circle_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/check_castle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:paddingLeft="30dp"
                android:background="@drawable/picslayout3"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_check_circle_24"  />

            <ImageButton
                android:id="@+id/castle_entry"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitEnd"
                android:src="@drawable/zamek_visiting"
                android:background="@drawable/picslayout4"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/annexe"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/oficyna_visiting"
                android:background="@drawable/picslayout3"/>

            <ImageView
                android:id="@+id/check_annexe"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:paddingRight="30dp"
                android:background="@drawable/picslayout4"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_check_circle_24"  />

        </LinearLayout>


    </LinearLayout>



</LinearLayout>